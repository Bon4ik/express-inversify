{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "noImplicitAny": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2016",
        "dom"
      ]
  },
  "compileOnSave": false,
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
